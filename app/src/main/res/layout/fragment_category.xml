<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/category_motionlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:background="@color/purple2"
        app:layoutDescription="@xml/category_scene"
        app:currentState="@id/category_set1"
        tools:context=".fragments.CategoryFragment">

        <ImageView
            android:id="@+id/category_top_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.35"
            android:background="@drawable/curve_rect_bottom_right"
            android:outlineProvider="background"
            android:elevation="8dp"
            app:layout_constraintVertical_bias="0"/>
        <ImageView
            android:id="@+id/category_shopitem_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintDimensionRatio="1,1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            android:elevation="8dp"
            app:layout_constraintBottom_toBottomOf="@id/category_top_card"/>
        <TextView
            android:id="@+id/category_shopitem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/category_top_card"
            app:layout_constraintBottom_toTopOf="@id/category_shopitem_image"
            app:layout_constraintVertical_bias="0"
            android:text="Categories"
            android:textSize="30sp"
            android:textColor="@color/purple1"
            android:fontFamily="@font/raleway"
            android:elevation="8dp"/>
        <ImageView
            android:id="@+id/category_top_graphic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/category_top_card"
            app:layout_constraintBottom_toBottomOf="@id/category_top_card"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintDimensionRatio="1,1.35"
            android:elevation="8dp"
            android:background="@drawable/graphic_category"/>
        <TextView
            android:id="@+id/category_titlename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/category_top_graphic"
            app:layout_constraintBottom_toBottomOf="@id/category_top_card"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0.85"
            android:text="Categories"
            android:textSize="35sp"
            android:textColor="@color/purple1"
            android:fontFamily="@font/raleway"
            android:elevation="8dp"/>
        <ScrollView
            android:id="@+id/category_scrollview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipChildren="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_top_card"
            app:layout_constraintVertical_bias="1.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/category_card_1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:elevation="5dp"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_rectangle2"
                    android:outlineProvider="background"
                    app:layout_constraintBottom_toTopOf="@id/category_card_3"
                    app:layout_constraintDimensionRatio="1,0.9"
                    app:layout_constraintEnd_toStartOf="@id/category_card_2"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="spread"
                    app:layout_constraintWidth_percent="0.45">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/category_cardtop"
                        app:layout_constraintDimensionRatio="1,1.3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/category_graphic_desktop"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1,1.3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.2"
                        app:layout_constraintWidth_percent="0.6" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/raleway_bold"
                        android:gravity="center"
                        android:text="Electronics"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.35"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/category_card_2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:elevation="5dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/rounded_rectangle2"
                    android:orientation="vertical"
                    android:outlineProvider="background"
                    app:layout_constraintDimensionRatio="1,0.9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/category_card_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.45">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/category_cardtop"
                        app:layout_constraintDimensionRatio="1,1.3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/category_graphic_car"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1,2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.3"
                        app:layout_constraintWidth_percent="0.7" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/raleway_bold"
                        android:gravity="center"
                        android:text="Vehicles"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.35"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/category_card_3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:elevation="5dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_rectangle2"
                    android:orientation="vertical"
                    android:outlineProvider="background"
                    app:layout_constraintBottom_toTopOf="@id/category_card_5"
                    app:layout_constraintDimensionRatio="1,0.9"
                    app:layout_constraintEnd_toStartOf="@id/category_card_4"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/category_card_1"
                    app:layout_constraintWidth_percent="0.45">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/category_cardtop"
                        app:layout_constraintDimensionRatio="1,1.3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/category_graphic_book"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1,1.2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.2"
                        app:layout_constraintWidth_percent="0.6" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/raleway_bold"
                        android:gravity="center"
                        android:text="Books"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.35"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/category_card_4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:elevation="5dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_rectangle2"
                    android:orientation="vertical"
                    android:outlineProvider="background"
                    app:layout_constraintBottom_toTopOf="@id/category_card_6"
                    app:layout_constraintDimensionRatio="1,0.9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/category_card_3"
                    app:layout_constraintTop_toBottomOf="@id/category_card_2"
                    app:layout_constraintWidth_percent="0.45">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/category_cardtop"
                        app:layout_constraintDimensionRatio="1,1.3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/category_graphic_ball"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1,1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.2"
                        app:layout_constraintWidth_percent="0.55" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/raleway_bold"
                        android:gravity="center"
                        android:text="Sports"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.35"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/category_card_5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:elevation="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/rounded_rectangle2"
                    android:orientation="vertical"
                    android:outlineProvider="background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1,0.9"
                    app:layout_constraintEnd_toStartOf="@id/category_card_6"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/category_card_3"
                    app:layout_constraintWidth_percent="0.45">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/category_cardtop"
                        app:layout_constraintDimensionRatio="1,1.3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/category_graphic_house"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1,1.1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.2"
                        app:layout_constraintWidth_percent="0.55" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/raleway_bold"
                        android:gravity="center"
                        android:text="Accomodations"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.35"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/category_card_6"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:elevation="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/rounded_rectangle2"
                    android:orientation="vertical"
                    android:outlineProvider="background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1,0.9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/category_card_5"
                    app:layout_constraintTop_toBottomOf="@id/category_card_4"
                    app:layout_constraintWidth_percent="0.45">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/category_cardtop"
                        app:layout_constraintDimensionRatio="1,1.3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/category_graphic_misc"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1,1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.2"
                        app:layout_constraintWidth_percent="0.5" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/raleway_bold"
                        android:gravity="center"
                        android:text="Misc."
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.35"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/category_shopitems"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipChildren="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/category_scrollview"
            app:layout_constraintWidth_percent="0.99"
            app:layout_constraintTop_toBottomOf="@id/category_top_card"
            app:layout_constraintVertical_bias="1.0"/>
        <ScrollView
            android:id="@+id/category_shopitem_details"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipChildren="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_top_card"
            app:layout_constraintVertical_bias="1.0">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/category_shopitem_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2000$"
                        android:textColor="@color/white"
                        android:textSize="30sp"/>
                    <TextView
                        android:id="@+id/category_shopitem_negotiable"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="*Negotiable"
                        android:textColor="@color/white"
                        android:gravity="end|center_vertical"
                        android:textSize="22sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/category_shopitem_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text=" Add project specific ProGuard rules here.
 You can control the set\n\n of applied configuration files using the
 proguardFiles setting in build.gradle. Add project specific ProGuard rules here.
 You can control the set of\n\n applied configuration files using the
 proguardFiles setting in build.gradle. "
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payment Options"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/category_shopitem_payment_paytm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/circle_drawable"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="Paytm"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/category_shopitem_payment_upi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/circle_drawable"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="UPI"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/category_shopitem_payment_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/circle_drawable"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="Cash"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingBottom="20dp"
                    android:background="@color/purple1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/purple6"/>
                    <TextView
                        android:id="@+id/category_shopitem_seller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wilson Nagar"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/purple6"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginBottom="30dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/category_shopitem_contact_call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/circle_drawable"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="Call"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/category_shopitem_contact_whatsapp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/circle_drawable"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Whatsapp"
                                android:gravity="center"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>

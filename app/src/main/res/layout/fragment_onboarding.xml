<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/on_boarding_motionlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/onboarding_scene"
        tools:context=".fragments.OnboardingFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/on_boarding_screen1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rounded_rectangle_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintWidth_percent="0.8">
            <ImageView
                android:id="@+id/on_boarding_image1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1,1"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintVertical_bias="0.1"/>
            <TextView
                android:id="@+id/on_boarding_title1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Cab Pooling"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toBottomOf="@id/on_boarding_image1"
                app:layout_constraintBottom_toTopOf="@id/on_boarding_text1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9"
                app:layout_constraintHeight_percent="0.1"/>
            <TextView
                android:id="@+id/on_boarding_text1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Saves costs and provides beautiful journey"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="center"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toBottomOf="@id/on_boarding_title1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintHeight_percent="0.15"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/on_boarding_screen2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rounded_rectangle_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.75"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintWidth_percent="0.8">
            <ImageView
                android:id="@+id/on_boarding_image2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1,1"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintVertical_bias="0.1"/>
            <TextView
                android:id="@+id/on_boarding_title2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Cab Pooling"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toBottomOf="@id/on_boarding_image2"
                app:layout_constraintBottom_toTopOf="@id/on_boarding_text2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9"
                app:layout_constraintHeight_percent="0.1"/>
            <TextView
                android:id="@+id/on_boarding_text2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Saves costs and provides beautiful journey"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="center"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toBottomOf="@id/on_boarding_title2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintHeight_percent="0.15"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/on_boarding_screen3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rounded_rectangle_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.75"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintWidth_percent="0.8">
            <ImageView
                android:id="@+id/on_boarding_image3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1,1"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintVertical_bias="0.1"/>
            <TextView
                android:id="@+id/on_boarding_title3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Cab Pooling"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toBottomOf="@id/on_boarding_image3"
                app:layout_constraintBottom_toTopOf="@id/on_boarding_text3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9"
                app:layout_constraintHeight_percent="0.1"/>
            <TextView
                android:id="@+id/on_boarding_text3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Saves costs and provides beautiful journey"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="center"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toBottomOf="@id/on_boarding_title3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintHeight_percent="0.15"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/on_boarding_indicator1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circle_drawable"
            android:backgroundTint="@color/blue2"
            android:padding="5dp"
            app:layout_constraintDimensionRatio="1,1"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintVertical_bias="0.95"/>

        <ImageView
            android:id="@+id/on_boarding_indicator2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circle_drawable"
            android:backgroundTint="@color/blue2"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1,1"
            app:layout_constraintEnd_toStartOf="@id/on_boarding_indicator3"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintStart_toEndOf="@id/on_boarding_indicator1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.95" />

        <ImageView
            android:id="@+id/on_boarding_indicator3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circle_drawable"
            android:backgroundTint="@color/blue2"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1,1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.95"
            app:layout_constraintHorizontal_bias="0.65"/>

        <ImageView
            android:id="@+id/on_boarding_ball"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/circle_drawable_border_blue"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="@id/on_boarding_indicator1"
            app:layout_constraintDimensionRatio="1,1"
            app:layout_constraintEnd_toEndOf="@id/on_boarding_indicator1"
            app:layout_constraintHeight_percent="0.03"
            app:layout_constraintStart_toStartOf="@id/on_boarding_indicator1"
            app:layout_constraintTop_toTopOf="@id/on_boarding_indicator1" />

        <TextView
            android:id="@+id/onboarding_getstarted"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="@color/blue2"
            android:text="GET STARTED"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center" />
        <ImageView
            android:id="@+id/onboarding_bg_sign"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.99"
            android:background="@drawable/background_image1"/>

        <TextView
            android:id="@+id/onboarding_login_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="LOGIN"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/rounded_rectangle_border_white"
            app:layout_constraintStart_toStartOf="@id/onboarding_bg_sign"
            app:layout_constraintEnd_toEndOf="@id/onboarding_bg_sign"
            app:layout_constraintTop_toTopOf="@id/onboarding_bg_sign"
            app:layout_constraintBottom_toBottomOf="@id/onboarding_bg_sign"
            app:layout_constraintHeight_percent="0.075"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintHorizontal_bias="0.1"/>
        <TextView
            android:id="@+id/onboarding_signup_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="SIGNUP"
            android:textSize="24sp"
            android:textColor="@color/blue2"
            android:gravity="center"
            android:background="@drawable/rounded_rectangle_border"
            app:layout_constraintStart_toStartOf="@id/onboarding_bg_sign"
            app:layout_constraintEnd_toEndOf="@id/onboarding_bg_sign"
            app:layout_constraintTop_toTopOf="@id/onboarding_bg_sign"
            app:layout_constraintBottom_toBottomOf="@id/onboarding_bg_sign"
            app:layout_constraintHeight_percent="0.075"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintVertical_bias="0.95"
            app:layout_constraintHorizontal_bias="0.1"/>
        <ImageView
            android:id="@+id/onboarding_login_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ic_login"
            app:layout_constraintStart_toStartOf="@id/onboarding_bg_sign"
            app:layout_constraintEnd_toEndOf="@id/onboarding_bg_sign"
            app:layout_constraintTop_toBottomOf="@id/onboarding_login_text"
            app:layout_constraintBottom_toBottomOf="@id/onboarding_bg_sign"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintDimensionRatio="1,1"/>
        <ImageView
            android:id="@+id/onboarding_signup_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ic_signup"
            app:layout_constraintStart_toStartOf="@id/onboarding_bg_sign"
            app:layout_constraintEnd_toEndOf="@id/onboarding_bg_sign"
            app:layout_constraintBottom_toTopOf="@id/onboarding_signup_text"
            app:layout_constraintTop_toTopOf="@id/onboarding_bg_sign"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintDimensionRatio="1,1"/>
    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>

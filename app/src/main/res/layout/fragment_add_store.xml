<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/add_store_motionlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple2"
        app:layoutDescription="@xml/add_store_scene"
        tools:context=".fragments.AddStoreFragment">
        <ImageView
            android:id="@+id/add_store_top_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.42"
            android:background="@drawable/curve_rect_bottom_right"
            android:outlineProvider="background"
            android:elevation="8dp"
            app:layout_constraintVertical_bias="0"/>
        <ImageView
            android:id="@+id/add_store_top_graphic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/add_store_top_card"
            app:layout_constraintBottom_toBottomOf="@id/add_store_top_card"
            app:layout_constraintVertical_bias="0.8"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintDimensionRatio="1,1.6"
            android:elevation="8dp"
            android:background="@drawable/graphic_add_store1"/>
        <TextView
            android:id="@+id/add_store_titlename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/add_store_top_card"
            app:layout_constraintBottom_toTopOf="@id/add_store_top_graphic"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintVertical_bias="1"
            android:text="Title"
            android:textSize="30sp"
            android:textColor="@color/purple1"
            android:fontFamily="@font/raleway"
            android:elevation="8dp"/>
        <ImageView
            android:id="@+id/add_store_next"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintWidth_percent="0.2"
            android:background="@drawable/circle_drawable"
            android:src="@drawable/ic_next3"
            android:padding="24dp"
            android:elevation="6dp"
            android:outlineProvider="background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.975"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1,1"/>

        <ImageView
            android:id="@+id/add_store_back"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintWidth_percent="0.2"
            android:rotation="180"
            android:src="@drawable/ic_next3"
            android:tint="@color/white"
            android:padding="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.975"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1,1"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_store_set1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="5dp"
            android:outlineProvider="background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_store_top_graphic"
            android:background="@drawable/rounded_rectangle_bottom">
            <TextView
                android:id="@+id/add_store_topic_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/raleway"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/add_store_itemname_text"/>
            <EditText
                android:id="@+id/add_store_itemname_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="@color/purple5"
                android:textSize="20sp"
                android:fontFamily="@font/raleway_bold"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:textColor="@color/purple0"
                android:textCursorDrawable="@null"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_store_topic_5"
                app:layout_constraintBottom_toTopOf="@id/add_store_topic_6" />
            <TextView
                android:id="@+id/add_store_topic_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="18sp"
                android:fontFamily="@font/raleway"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_store_itemname_text"
                app:layout_constraintBottom_toTopOf="@id/add_store_category_text" />
            <EditText
                android:id="@+id/add_store_category_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="@color/purple5"
                android:textSize="20sp"
                android:fontFamily="@font/raleway_bold"
                android:maxLines="1"
                android:inputType="textCapWords"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:textColor="@color/purple0"
                android:textCursorDrawable="@null"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_store_topic_6"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_store_set2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="5dp"
            android:outlineProvider="background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_store_top_graphic"
            android:background="@drawable/rounded_rectangle_bottom">
            <TextView
                android:id="@+id/add_store_topic_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Price"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/add_store_price"/>
            <EditText
                android:id="@+id/add_store_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="@color/purple5"
                android:textSize="20sp"
                android:fontFamily="@font/raleway_bold"
                android:inputType="number"
                android:maxLines="1"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:textColor="@color/purple0"
                android:textCursorDrawable="@null"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_store_topic_1"
                app:layout_constraintBottom_toTopOf="@id/add_store_topic_2"/>
            <TextView
                android:id="@+id/add_store_topic_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Methods"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_store_price"
                app:layout_constraintBottom_toTopOf="@id/add_store_topic_3"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/add_store_topic_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintHeight_percent="0.20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_store_topic_2"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:id="@+id/add_store_payment_paytm"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="1,1"
                    app:layout_constraintHorizontal_bias="0"
                    android:background="@drawable/circle_drawable"/>
                <ImageView
                    android:id="@+id/add_store_payment_upi"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="1,1"
                    app:layout_constraintHorizontal_bias="0.5"
                    android:background="@drawable/circle_drawable"/>
                <ImageView
                    android:id="@+id/add_store_payment_cash"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="1,1"
                    app:layout_constraintHorizontal_bias="1"
                    android:background="@drawable/circle_drawable"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_store_set3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="5dp"
            android:outlineProvider="background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_store_top_graphic"
            android:background="@drawable/rounded_rectangle_bottom">
            <TextView
                android:id="@+id/add_store_topic_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/add_store_description_text"/>
            <EditText
                android:id="@+id/add_store_description_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textCursorDrawable="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_store_topic_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.65"
                app:layout_constraintWidth_percent="0.8"
                android:textColor="@color/purple0"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="@color/purple2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_store_set4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="5dp"
            android:outlineProvider="background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_store_top_graphic"
            android:background="@drawable/rounded_rectangle_bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Image"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.15"/>
            <LinearLayout
                android:id="@+id/add_store_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintDimensionRatio="1,1"
                app:layout_constraintVertical_bias="0.75"
                android:background="@drawable/rounded_rectangle_dotted_border"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:weightSum="7"
                android:orientation="vertical">
                <ImageView
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/ic_upload"
                    android:layout_marginBottom="25dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginTop="35dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:text="Upload"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:gravity="top|center_horizontal"
                    android:fontFamily="@font/raleway"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/add_store_image_display"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintDimensionRatio="1,1"
                app:layout_constraintVertical_bias="0.75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>